{
  "name": "klwe",
  "version": "0.1.0",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "npx prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.json",
    "test:watch": "npm run test -- --watch",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@sveltejs/kit": "next",
    "@testing-library/jest-dom": "^5.14.0",
    "@testing-library/svelte": "^3.0.0",
    "@types/jest": "^27.0.1",
    "@types/testing-library__jest-dom": "^5.14.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "husky": "^7.0.2",
    "jest": "^27.0.0",
    "lint-staged": "^11.2.3",
    "node-sass": "^6.0.1",
    "prettier": "~2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "sass": "^1.39.2",
    "svelte": "^3.34.0",
    "svelte-check": "^2.0.0",
    "svelte-jester": "^2.1.3",
    "svelte-preprocess": "^4.9.4",
    "ts-jest": "^27.0.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0",
    "vite-plugin-wasm-pack": "^0.1.7"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,ts,svelte,css,scss,md,json}": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "kustom": "^0.2.1"
  }
}
